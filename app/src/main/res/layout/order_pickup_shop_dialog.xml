<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<!--        <com.airbnb.lottie.LottieAnimationView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            app:lottie_autoPlay="true"-->
<!--            app:lottie_rawRes="@raw/accepted"-->
<!--            android:layout_gravity="center"-->
<!--            android:gravity="center"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order pick-up request"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verification code:"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito_sans_regular"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/nunito_sans_regular"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:letterSpacing="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/round_withborder_2"
            android:id="@+id/oderpickupcode"
            android:padding="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incorrect code!"
            android:fontFamily="@font/nunito_sans_bold"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/incorrectcode"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F4F4F4"
            android:id="@+id/idalertok"
            android:textColor="@color/colorPrimaryDark"
            android:clickable="true"
            android:padding="10dp"
            android:text="Verify"
            android:textSize="18dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>