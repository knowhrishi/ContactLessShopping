<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@drawable/back1"
    android:orientation="vertical">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:CardView="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="500dp"
            android:backgroundTint="#8e24aa"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp" >

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/shop_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP DETAILS"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans_extra_bold"
                android:textSize="20sp"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="start" />

        </LinearLayout>

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:context=".Customers.Make_list">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--   <view
                       android:layout_width="match_parent"
                       android:layout_height="2dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp">

                   </view>-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#fff"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="5dp"
                    card_view:cardMaxElevation="7dp">
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <!--            <ImageView-->
                <!--                android:layout_width="25dp"-->
                <!--                android:layout_height="25dp"-->
                <!--                android:layout_gravity="center"-->
                <!--                android:layout_marginRight="10dp"-->
                <!--                android:src="@drawable/date" />-->

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/grocery"/>

            <!--                <TextView-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginLeft="10dp"-->
            <!--                    android:layout_marginTop="10dp"-->
            <!--                    android:fontFamily="@font/opensans_bold"-->
            <!--                    android:text="WELCOME BACK"-->
            <!--                    android:textColor="#ADADAD" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/welcome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Shop Name"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/phno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:textStyle="italic"
                    android:text="Phone number"
                    android:fontFamily="@font/nunito_sans_regular"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp">
                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Working Hrs"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:textColor="#000"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="9AM - 10PM"

                        android:fontFamily="@font/nunito_sans_regular"
                        android:id="@+id/time"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:layout_marginLeft="70dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:text="Upload a List"
                        android:textColor="#fff"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:background="#8e24aa"
                        android:id="@+id/uploadimg"
                        android:layout_gravity="bottom"/>

                    <Button
                        android:id="@+id/makelist"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:text="Write a List"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:background="#8e24aa"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>