<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".Shops.Main.OrderDetails"
    android:background="@drawable/back1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="500dp"
            android:backgroundTint="#8e24aa"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp" >
        </android.support.v7.widget.CardView>

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:context=".Customers.Make_list">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#fff"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="5dp"
                    card_view:cardMaxElevation="7dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="20dp"
                                    android:text="CUSTOMER NAME : "
                                    android:fontFamily="@font/nunito_sans_bold"
                                    android:textSize="15sp"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/idCustomerName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="5dp"
                                    android:text="customer name "
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:textColor="@color/white">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="ORDER STATUS: "
                                    android:fontFamily="@font/nunito_sans_bold"
                                    android:textSize="15sp"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/idOrderStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:paddingLeft="5dp"
                                    android:text="order_status"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="#D68700"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="ORDER TIME: "
                                    android:textSize="15sp"
                                    android:fontFamily="@font/nunito_sans_bold"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/idOrderTimeStamp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:paddingLeft="5dp"
                                    android:text="ordertime "
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:text="ORDER NO : "
                                    android:textSize="15sp"
                                    android:fontFamily="@font/nunito_sans_bold"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/idOrderNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:paddingLeft="5dp"
                                    android:text="order#"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        </view>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:fontFamily="@font/nunito_sans_bold"
                            android:text="List:"
                            android:textColor="@color/black"
                            android:textSize="25dp" />

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                        </view>

                        <RelativeLayout
                            android:id="@+id/idProductListRV"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_margin="20dp"
                            android:background="@drawable/rounded_button_withborder"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ListView
                                    android:id="@+id/list_order"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </RelativeLayout>


                        <!--            <ImageView-->
                        <!--                android:id="@+id/img"-->
                        <!--                android:layout_width="match_parent"-->
                        <!--                android:layout_height="wrap_content"-->
                        <!--                android:layout_margin="10dp"-->
                        <!--                android:padding="5dp"-->
                        <!--                android:visibility="gone" />-->


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/idCVProductImage"
                            android:visibility="gone"
                            android:elevation="0dp">

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/relative_layout_progress"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:visibility="gone">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/upload"
                                    android:layout_width="200dp"
                                    android:layout_height="200dp"
                                    android:visibility="gone"
                                    app:lottie_loop="true"
                                    app:lottie_rawRes="@raw/image_loading" />
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="match_parent"
                                android:layout_height="400dp"
                                android:layout_margin="10dp" />

                            <ImageView
                                android:id="@+id/expanded_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="invisible" />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/idBtnAccept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@color/green"
                            android:fontFamily="@font/nunito_sans_bold"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Accept"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/idBtnReject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/nunito_sans_bold"
                            android:background="@color/red"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Reject"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout></LinearLayout></RelativeLayout></ScrollView>
