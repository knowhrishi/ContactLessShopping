<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="500dp"
            android:backgroundTint="#8e24aa"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp" >
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/per"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP PROFILE"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans_extra_bold"
                android:textSize="20sp"
                android:layout_gravity="top"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="0dp"
            tools:context=".Customers.Make_list">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#fff"
                    card_view:cardCornerRadius="30dp"
                    card_view:cardElevation="5dp"
                    card_view:cardMaxElevation="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/r"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="18dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageview_account_profile"
                                android:layout_width="120dp"
                                android:layout_height="150dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/store"
                                app:civ_border_color="#FFFFFF"
                                app:civ_border_width="2dp" />


                            <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/edit_profile_picture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignEnd="@+id/imageview_account_profile"
                                android:layout_alignRight="@+id/imageview_account_profile"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/edit_24dp" />

                        </RelativeLayout>

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                        </view>

                        <LinearLayout
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/r"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/profile_shop"
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:src="@drawable/ic_shopping_basket_black_24dp" />

                            <TextView
                                android:id="@+id/shop_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:text="Name : "
                                android:fontFamily="@font/nunito_sans_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"></view>

                        <LinearLayout
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"

                                android:src="@drawable/ic_local_phone_black_24dp" />

                            <TextView

                                android:id="@+id/shop_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:text="Phone Number : "
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"></view>

                        <LinearLayout
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/number"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="0dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"
                                android:src="@drawable/ic_email_black_24dp" />

                            <TextView

                                android:id="@+id/shop_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:text="E-mail"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"></view>
                        <LinearLayout
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/email"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="30dp"

                                android:layout_marginTop="15dp"
                                android:src="@drawable/ic_business_black_24dp" />

                            <TextView

                                android:id="@+id/shop_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:text="Address"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </LinearLayout>

                        <view
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp">
                        </view>

                        <LinearLayout
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/address"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="Working Hours : "
                                android:textColor="@color/black"
                                android:fontFamily="@font/nunito_sans_bold"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/shop_open"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Open"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textSize="20dp" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="TO"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/shop_close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="close"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textSize="20dp" />
                        </LinearLayout>
                        <view
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"></view>

                        <LinearLayout
                            android:id="@+id/capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/time"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:text="Capacity : "
                                android:textColor="@color/black"
                                android:fontFamily="@font/nunito_sans_bold"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/shop_capacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" 50"
                                android:textColor="@color/black"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textSize="20dp" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>